<resources>

    <style name="Theme.NotesAppGlobal.NotesAppBase">
        <item name="background">@color/dark_gray</item>
        <item name="backgroundColor">@color/dark_gray</item>
        <item name="android:colorBackground">@color/dark_gray</item>
        <!-- Status bar color. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="Theme.NotesAppGlobal.NotesAppBase.NotesApp">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_200</item>
        <item name="colorPrimaryVariant">@color/grey_300</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_grey_700</item>
        <item name="colorSecondaryVariant">@color/blue_grey_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--Other Colors-->
        <item name="android:statusBarColor">@color/dark_gray</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <!--Typography -->
        <item name="fontFamily">@font/open_sans_font_family</item>
    </style>


    <style name="Theme.NotesAppGlobal.NotesAppBase.SplashTheme">
        <item name="android:windowBackground">@drawable/splash_screen_drawable_dark</item>
        <item name="android:statusBarColor">@color/dark_gray</item>
    </style>

    <style name="Theme.NotesAppGlobal.NotesAppBase.ToolbarTextAppearance" parent="@style/TextAppearance.Material3.HeadlineMedium">
        <item name="android:textStyle">bold</item>
    </style>
</resources>